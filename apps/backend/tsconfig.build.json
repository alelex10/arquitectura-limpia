// apps/backend/tsconfig.build.json
{
  "extends": "./tsconfig.json", // O el archivo base que uses
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@domain/*": [
        "../../domain/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "references": [
    {
      "path": "../../domain" // Asegúrate de que esta ruta apunte a la carpeta raíz de tu proyecto 'domain'
    }
  ]
}
