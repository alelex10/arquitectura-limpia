{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "es2016",
    "module": "commonjs",
    // "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./", // se elimina para usar paths desde el tsconfig ra√≠z
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
    
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
