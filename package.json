{
	"name": "arquitectura-limpia",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"build:domain": "pnpm --filter ./domain run build",
		"build:backend": "pnpm --filter ./apps/backend run build",
		"dev": "pnpm --parallel run dev:backend dev:client",
		"dev:backend": "pnpm run build:domain && pnpm --filter ./apps/backend run start:dev",
		"dev:client": "pnpm --filter ./apps/frontend run dev"
	},
	"devDependencies": {
		"typescript": "^5.8.3",
		"nodemon": "^3.1.10"
	}
}
