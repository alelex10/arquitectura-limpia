{
	"name": "for-it-proyecto-",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
		"dev:frontend": "pnpm --workspace apps/frontend run dev",
		"dev:backend": "pnpm --filter ./apps/backend run build && pnpm --filter ./apps/backend run start:dev"
	},
	"private": true,
	"workspaces": [
		"domain",
		"apps/backend"
	],
	"devDependencies": {
		"concurrently": "^9.2.0",
		"nodemon": "^3.1.10",
		"typescript": "^5.8.3"
	}
}
